{
  "name": "Student",
  "plural": "Students",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "required": true
    },
    "semester": {
      "type": "number",
      "default": 1
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "careers": {
      "type": [
        {
          "required": true,
          "name": {
            "type": "string",
            "required": true
          },
          "currentAverage": {
            "type": "number",
            "default": 0
          },
          "lines": [
            {
              "required": true,
              "name": {
                "type": "string",
                "required": true
              },
              "color": {
                "type": "string",
                "default": "#0000"
              },
              "courses": [
                {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "pregress": {
                    "type": "number",
                    "default": 0
                  },
                  "credits": {
                    "type": "number",
                    "required": true
                  },
                  "semester": {
                    "type": "number",
                    "required": true
                  },
                  "score": {
                    "type": "object",
                    "default": {
                      "firstPeriod": 0,
                      "secondPeriod": 0
                    }
                  }
                }
              ]
            }
          ]
        }
      ],
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
